page,.page {
    height: 100%;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
/*左侧导航列表  */
.page-bottom{
    height: 100%;
    width: 75%;
    position: fixed;
    background-color: rgb(255, 68, 97);
    z-index: 0;
}
.page-list{
    color: white;
    padding: 30rpx 0 30rpx 40rpx;
}

/*右侧展示层  */
.page-top{
    position: relative;
    top: 0;
    left:0;
    width: 750rpx;
    height: 100%;
    background-color: rgb(57, 125, 230);
    z-index: 0;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
}

.page-state{
    transform: rotate(0deg) scale(1) translate(75%,0%);
    -webkit-transform: rotate(0deg) scale(1) translate(75%,0%);
}
.imgw{width:100%;}

/*右侧列表按钮  */
.page-top .left-nav{
    position: fixed;
    width: 68rpx;
    height: 38rpx;
    left: 20rpx;
    bottom: 20rpx;
    z-index: 998;
}

/*右侧遮罩层  */
.page-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 998;
}
.page-mask-show{
    display: none;
}